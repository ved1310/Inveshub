<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".investordashboard.home.addetails.AdDetailsFragment">
    <include
        android:id="@+id/actionBar"
        layout="@layout/general_toolbar"/>
    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_share"
        android:elevation="8dp"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/actionBar"
        app:layout_constraintBottom_toBottomOf="@id/actionBar"
       />
    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintEnd_toStartOf="@id/ivShare"
        android:src="@drawable/ic_call"
       android:tint="@color/black"
        android:elevation="8dp"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@id/actionBar"
        app:layout_constraintBottom_toBottomOf="@id/actionBar"/>
    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/ivCall"
        android:elevation="8dp"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="@id/actionBar"
        app:layout_constraintBottom_toBottomOf="@id/actionBar"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/ivSave"
        android:background="@color/dark_gray_200"/>
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_15sdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImages"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:tabBackground="@drawable/tab_indicator_round"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerImages" />
    <View
        android:id="@+id/vUpper"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/viewPagerImages"
        android:background="@drawable/dotted_line_bg"/>
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="0dp"
        android:src="@drawable/ic_user"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        app:layout_constraintBottom_toBottomOf="@id/tvId"/>

    <TextView
        android:id="@+id/tvHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Name :"
        android:textColor="@color/gray_800"
        android:textSize="@dimen/_12ssp"
        android:includeFontPadding="false"
        android:fontFamily="@font/sf_pro_semibold"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/ivProfile"
        app:layout_constraintStart_toEndOf="@id/ivProfile"/>

    <TextView
        android:id="@+id/tvHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vedant Shivaji Dhakne"
        android:textColor="@color/gray_700"
        android:textSize="@dimen/_11ssp"
        android:includeFontPadding="false"
        android:fontFamily="@font/sf_pro_medium"
        app:layout_constraintBottom_toBottomOf="@id/tvHost"
        android:layout_marginStart="@dimen/_5sdp"
       app:layout_constraintTop_toTopOf="@id/tvHost"
        app:layout_constraintStart_toEndOf="@id/tvHost"/>

    <TextView
        android:id="@+id/tvBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Name:"
        android:textSize="@dimen/_12ssp"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/gray_800"
        android:fontFamily="@font/sf_pro_semibold"
        app:layout_constraintTop_toBottomOf="@id/tvHost"
        app:layout_constraintStart_toStartOf="@id/tvHost"/>

    <TextView
        android:id="@+id/tvBusinessName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dasra Chowk,Balewadigaon,Pune"
        android:includeFontPadding="false"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/gray_700"
        android:fontFamily="@font/sf_pro_medium"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvBusiness"
        app:layout_constraintTop_toTopOf="@id/tvBusiness"
        app:layout_constraintStart_toEndOf="@id/tvBusiness"/>

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number :"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/gray_800"
        android:fontFamily="@font/sf_pro_semibold"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/tvBusiness"
        app:layout_constraintStart_toStartOf="@id/tvBusiness"/>

    <TextView
        android:id="@+id/tvBusinessID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="411045"
        android:textColor="@color/gray_700"
        android:textSize="@dimen/_11ssp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/tvId"
        android:fontFamily="@font/sf_pro_medium"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/tvId"
        app:layout_constraintStart_toEndOf="@id/tvId"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tvBusinessID"
        android:background="@drawable/dotted_line_bg"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:tabBackground="@color/transparent"
        app:tabGravity="fill"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:tabTextColor="@color/gray_700"
        app:tabMode="fixed"
        app:tabPadding="@dimen/_5sdp"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/midnight_blue"
        app:tabPaddingBottom="-3dp"
        app:tabSelectedTextAppearance="@style/tab_selected"
        app:tabTextAppearance="@style/tab_unselected" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_100"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tabLayouts"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="12dp"
        android:padding="@dimen/_15sdp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/tabLayouts"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>