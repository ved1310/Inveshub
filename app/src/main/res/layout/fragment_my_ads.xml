    <TextView
        android:id="@+id/tvEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/blue_border_bg"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="EditText"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvShare"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tvScreenShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/blue_border_bg"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="ScreenShot"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvShare"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/tvEditText" />

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border_bg"
        android:backgroundTint="@color/purple"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/sf_pro_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="share"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:drawableStartCompat="@drawable/ic_whatsapp"
        app:layout_constraintBottom_toBottomOf="@id/tvEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEditText"
        app:layout_constraintTop_toTopOf="@id/tvEditText" />

